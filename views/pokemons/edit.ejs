<% layout('layouts/boilerplate') %>
<div class="container home d-flex justify-content-center align-items-center">
<div class='row'>
    <div class='col-md-6 offset-md-3'>
        <div class='card shadow'>
            <div class='card-body'>
                <h1 class='text-info text-center'>Edit <%= pokemon.name %>!              
                </h1>
                <a class='p d-flex justify-content-end' href='/pokemons/<%=pokemon._id %>'>Go Back</a>
                <form class='form-group' method='post' action='/pokemons/<%= pokemon._id %>/edit?_method=put' novalidate enctype='multipart/form-data'>
                    <div class='mb-1'>
                        <label class='form-label' for='name'>Name:</label> 
                        <input class='form-control' type='text' id='name' name='name' placeholder='<%= pokemon.name %>' value='<%= pokemon.name %>' required>
                    </div>
                    <div class='mb-1'>
                        <label class='form-label' for='type'>Type:</label> 
                        <input class='form-control' type='text' id='type' name='type' placeholder='<%= pokemon.type %>' value='<%= pokemon.type %>' required>
                    </div>
                    <div class='mb-1'>
                        <label class='form-label' for='HP'>HP:</label> 
                        <input class='form-control' type='text' id='HP' name='HP' placeholder='<%= pokemon.HP %>' value='<%= pokemon.HP %>' required>
                    </div>
                    <div class='mb-1'>
                        <label class='form-label' for='attack'>Attack:</label> 
                        <input class='form-control' type='text' id='attack' name='attack'placeholder='<%= pokemon.attack %>' value='<%= pokemon.attack %>' required>
                    </div>
                    <div class='mb-1'>
                        <label class='form-label' for='defense'>Defense:</label> 
                        <input class='form-control' type='text' id='defense' name='defense' placeholder='<%= pokemon.defense %>' value='<%= pokemon.defense %>' required>
                    </div>
                    <div class='mb-1'>
                        <label class='form-label' for='HP'>Speed:</label> 
                        <input class='form-control' type='text' id='speed' name='speed' placeholder='<%= pokemon.speed %>' value='<%= pokemon.speed %>' required>
                    </div>
                    <div class='mb-1'>
                        <label class='form-label' for='image'>Add Image:</label> 
                        <input class='form-control' type='file' id='image' name='image' multiple />
                    </div>
                    <div >
                            <% pokemon.image.forEach((img, i)=> { %>
                                <div class='col-3 d-inline-flex mx-5'>
                                    <img src='\images\<%= img.filename %>' class="img-thumbnail" alt="">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="img-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                                        <label class="form-check-label" for="img-<%= i %>">Delete Image?</label>
                                    </div> 
                                </div>
                            <% }) %>                    
                    </div>
                    <div class='d-grid'>
                        <button class='btn btn-primary'>Update Pokemon</button>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
    
</div>
</div>